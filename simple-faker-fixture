    {
        // $product = new Product();
        // $manager->persist($product);


        $faker = Faker\Factory::create('fr_FR');


            // On cr√©e 100 personnes
            for ($i=0; $i < 100 ; $i++) { 
                $person = new Person() ;
                $person->setName($faker->name) ;
                $person->setAddress($faker->streetAddress) ;
                $person->setCity($faker->city) ;
                $person->setZipcode($faker->postcode) ;
